<div class="row sign-up-form">
  <div class="col s12 m6">
    <div class="card ">
      <div class="card-content ">
        <span class="card-title">Name: <%= @portfolio.name %></span>
        <p>Description: <%= @portfolio.description %></p>
        <% if @portfolio.categories.any? %>
          <p>Categories: <%= render @portfolio.categories %></p>
        <% end %>
      </div>
      <div class="card-action">
      <%= link_to '<i class="material-icons right">create</i>Edit'.html_safe, edit_portfolio_path(@portfolio), class:"waves-effect waves-light btn" %>
      <%= link_to '<i class="material-icons right">delete</i>Delete'.html_safe, portfolio_path(@portfolio), method: :delete, class:"waves-effect waves-light btn" %>
      </div>
    </div>
  </div>  
</div>