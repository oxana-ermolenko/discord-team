<div class="row">
  <h3 class="center-align">Portfolio Listing </h3>
  <% @portfolios.each do |portfolio| %>
    <div class="col s12 m6">
      <div class="card ">
        <div class="card-content ">
          <span class="card-title"><%= portfolio.name %></span>
          <p><%= portfolio.description %></p>
          
        </div>
        <div class="card-action">
        
        </div>
      </div>
    </div> 
    
  <% end %>
  <%= link_to '<i class="material-icons right">note</i>New'.html_safe, new_portfolio_path, class:"waves-effect waves-light btn" %>
</div>